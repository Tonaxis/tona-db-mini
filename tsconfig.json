{
  "compilerOptions": {
    "target": "ES2024",
    "module": "es2022",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
  },
  "include": ["src/**/*.ts"]
}
